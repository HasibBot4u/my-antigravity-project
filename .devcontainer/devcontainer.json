{
  "name": "Antigravity Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    "vscode": {
      "extensions": [
        "google.antigravity-toolkit",
        "google.gemini",
        "ms-vscode.azure-repos",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "antigravity.agent.autoExecute": "auto",
        "antigravity.ui.showAgentManager": true,
        "antigravity.feature.artifacts": true
      }
    }
  },
  "remoteUser": "codespace"
}
